{
    "name": "A11y Gradient",
    "description": "Browser devtools checks color contrast between background and text colors. But it is limited to monochromatic colours. A11y Gradient deals with gradients too.",
    "version": "0.1.0",
    "version_name": "0.1.0-alpha",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.bundle.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "assets/logo/icon16.png",
        "48": "assets/logo/icon48.png",
        "128": "assets/logo/icon128.png"
    },
    "action": {
        "default_popup": "html/popup.html"
    },
    "background": {
        "service_worker": "js/background.bundle.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["assets/close.png", "css/content.css"],
            "matches": ["https://*/*"]
        }
    ],
    "devtools_page": "html/devtools.html",
    "permissions": ["tabs", "scripting", "activeTab"],
    "host_permissions": ["<all_urls>"]
}
